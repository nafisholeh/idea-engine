{
  "name": "reddit-radar",
  "version": "1.0.0",
  "description": "Reddit data analysis tool for identifying SaaS opportunities",
  "main": "server.js",
  "scripts": {
    "setup:python": "python -m pip install -r requirements.txt && python -m spacy download en_core_web_sm",
    "setup:node": "npm install",
    "setup": "npm run setup:node && npm run setup:python",
    "start:collector": "python DataCrawler.py --collect --time-period day",
    "start:server": "node server.js",
    "start:frontend": "cd frontend && npm start",
    "start:dev": "concurrently \"npm run start:server\" \"npm run start:frontend\"",
    "start": "concurrently \"npm run start:collector\" \"npm run start:server\"",
    "dev": "concurrently \"npm run start:collector\" \"nodemon server.js\"",
    "build:frontend": "cd frontend && npm run deploy"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}
